{
  "name": "raspberry_pi",
  "description": "managing the raspberry pi devices",
  "json_class": "Chef::Role",
  "default_attributes": {
    "git_config": {
      "client": "true",
      "git_method": "ssh",
      "git_mount": "/media/tquinn/media/git_repo/",
      "server": "true",
      "server_pkg": "gitweb gitstats gitolite3 git-sh git-repair git-extras git-all mksh mediawiki autotrace html2ps tcl-tclreadline"
    },
    "install_adds": {
      "authorization": {
        "sudo": {
          "groups": [
            "wheel",
            "adm"
          ],
          "passwordless": "true"
        }
      },
      "gem_set": "rails",
      "package_set": "apache2 apache2-utils dkms lynx hdparm openssl openssl-blacklist openssh-server git"
    },
    "ssh_config": {
      "enable_scp": true,
      "key_size": "4096",
      "keys_set": true,
      "log_level": "INFO",
      "port": "22",
      "root_login": "without-password",
      "server_key_size": "1024",
      "use_dsa": false,
      "use_ed25519": false,
      "use_pam": true,
      "use_rsa": true
    }
  },
  "override_attributes": {

  },
  "chef_type": "role",
  "run_list": [
  "recipe[hello_chef_server]",
  "recipe[quinncloud::initial_setup]",
  "recipe[motd::default]"
]
,
  "env_run_lists": {

  }
}
